<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/b2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="8.Dinosour name ?"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/carnotaurus" />

    <Button
        android:id="@+id/camarasaurus_button8"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="16dp"
        android:text="camarasaurus"
        android:textStyle="bold" />

    <Button
        android:id="@+id/carnotaurus_button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignTop="@+id/camarasaurus_button8"
        android:layout_toEndOf="@+id/camarasaurus_button8"
        android:layout_toRightOf="@+id/camarasaurus_button8"
        android:text="carnotaurus"
        android:textStyle="bold" />

    <Button
        android:id="@+id/velociraptor_button8"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/camarasaurus_button8"
        android:layout_alignStart="@+id/camarasaurus_button8"
        android:layout_below="@+id/camarasaurus_button8"
        android:layout_marginTop="23dp"
        android:text="velociraptor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/tyrannosaurusrex_button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/carnotaurus_button8"
        android:layout_alignRight="@+id/carnotaurus_button8"
        android:layout_alignTop="@+id/velociraptor_button8"
        android:layout_toEndOf="@+id/velociraptor_button8"
        android:layout_toRightOf="@+id/velociraptor_button8"
        android:text="tyrannosaurusrex"
        android:textStyle="bold" />

</RelativeLayout>